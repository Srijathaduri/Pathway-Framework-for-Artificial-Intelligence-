{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    },
    {
      "src": "backend/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/:path*",
      "destination": "/frontend/index.html"
    }
  ]
}
